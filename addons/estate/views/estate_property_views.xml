<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_default_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Show default estate property view 
            </p><p>
            </p>
        </field>
    </record>
    <record id="view_estate_from" model="ir.ui.view">
        <field name="name">estate.from</field>
        <field name="model">estate.property</field>
        <field name="arch" type='xml'>
          <form>
            <search string="Tests">
                <field name="name"/>
            </search>
          <sheet>
            <group>
            <group>
            <field name="name"/>
            </group>
                <group>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                </group>
                <group>
                    <field name="date_availability"/>
                    <field name="selling_price"/>
                </group>
                <notebook>
                    <page string="description">
                        <group>
                             <field name="description"/>
                             <field name="bedrooms"/>
                             <field name="living_area"/>
                             <field name="facades"/>
                        </group>
                        <group>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                    </page>
                </notebook>
            </group>
          </sheet>
          </form>
        </field>
    </record>
    <record id="view_estate_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type='xml'>
           <tree>
           <field name="name"/>
           <field name="expected_price"/>
           <field name="garage"/>
           <field name="garden"/>
           </tree>
        </field>
    </record>
    <menuitem id="estate_menu_root" name="Real Estate">
        <menuitem id="estate_advertisement_menu" name="Advertisements">
            <menuitem id="estate_property_menu_action" action="estate_property_default_action"/>
        </menuitem>
    </menuitem>
</odoo>